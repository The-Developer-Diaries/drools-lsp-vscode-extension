{
  "name": "vscode-drools",
  "displayName": "Drools DRL Language Support",
  "description": "Language support for Drools Rule Language (DRL) files - autocomplete, diagnostics, go-to-definition, and hover documentation",
  "version": "0.1.0",
  "publisher": "SubhanshuBansal",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/apache/drools-lsp-vscode-extension"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:drl"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "drl",
        "aliases": [
          "Drools Rule Language",
          "DRL"
        ],
        "extensions": [
          ".drl"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "drl",
        "scopeName": "source.drl",
        "path": "./syntaxes/drl.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Drools DRL",
      "properties": {
        "drools.lsp.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the drools-lsp shaded JAR. If empty, the extension will look for it in the extension directory."
        },
        "drools.lsp.javaHome": {
          "type": "string",
          "default": "",
          "description": "Path to the Java 17+ installation. If empty, uses JAVA_HOME or java on PATH."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/node": "^20.0.0",
    "typescript": "^5.3.0"
  }
}
